{
    "compilerOptions": {
      "outDir": "build",
      "sourceMap": true,
      "strict": true,
      "target": "ES2022",
      "lib": [ "ES2022" ],
      "allowJs": true,
      "module": "ES2022",
      "moduleResolution": "node",
      "declaration": true,
      "pretty": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  